<script>
  // Portfolio image cycling
  const portfolioImages = [
    '/assets/images/portfolio/pineworks-image.png',
    '/assets/images/portfolio/solspun-image.png'
  ];
  
  let currentImageIndex = 0;
  const portfolioImage = document.getElementById('portfolio-image');
  
  function cycleImage() {
    currentImageIndex = (currentImageIndex + 1) % portfolioImages.length;
    portfolioImage.src = portfolioImages[currentImageIndex];
  }
  
  // Change image every 3 seconds
  setInterval(cycleImage, 3000);
</script>